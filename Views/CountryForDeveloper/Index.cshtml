@model IEnumerable<Sem2Lab1SQLServer.Countries>

@{
    ViewData["Title"] = "Index";
}

<h1>Країни</h1>

<p>
    <input type="button" class="btn btn-outline-dark" onclick="history.go(-1)" value="Повернутися до розробника" />
    <a asp-action="Index" asp-controller="Countries" class="btn btn-outline-dark">Перейти до списку країн</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Continent)
            </th>
            <th>Керування</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Continent.Name)
                </td>
                <td>
                    <a asp-action="ContDetails" asp-route-id="@item.CountryId" class="btn btn-outline-info">Деталі про континент</a>
                </td>
            </tr>
        }
    </tbody>
</table>
