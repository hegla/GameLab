@model Sem2Lab1SQLServer.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Додати роль";
}

<h4>Додавання ролі</h4>

<p>
    <a asp-action="Index" class="btn btn-outline-dark">Назад</a>
</p>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>