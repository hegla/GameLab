@model IEnumerable<Sem2Lab1SQLServer.Games>

@{
    ViewData["Title"] = "Index";
}

<h1>Ігри у жанрі @ViewBag.Name</h1>

<p>
    <a asp-action="Index" asp-controller="Genres" class="btn btn-outline-dark">Повернутися до списку жанрів</a>
    <a asp-action="Index" asp-controller="Games" class="btn btn-outline-dark">Перейти до списку ігор</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Developer)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Developer.Name)
            </td>
        </tr>
}
    </tbody>
</table>
