@model IEnumerable<Sem2Lab1SQLServer.Continents>

@{
    ViewData["Title"] = "Index";
}

<h1>Деталі про континент</h1>

<p>
    <input type="button" class="btn btn-outline-dark" onclick="history.go(-1)" value="Повернутися до країн" />
    <a asp-action="Index" asp-controller="Continents" class="btn btn-outline-dark">Перейти до списку континентів</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
        </tr>
}
    </tbody>
</table>
